%table.table.table-striped.data-table.display.responsive.no-wrap
  %thead
    %tr
      %th #
      %th Name
      %th Mobile #
      %th Allotted Items Count
      %th Actions
  %tbody
    - @people.each_with_index do |person, index|
      %tr{ id: "person_tr_#{person.id}" }
        %td= index + 1
        %td= link_to restrict_length(person.name), '#', data: { 'toggle' => 'tooltip' }, title: person.name
        %td= restrict_length(person.mobile_no)
        %td= person.allotted_items_count
        %td
          .dropdown
            %button.btn.btn-default.btn-xs.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
              Options
              %span.caret
            %ul.dropdown-menu
              %li
                = link_to 'Edit Details', edit_person_path(person.id)
              %li
                = link_to 'View Items', items_person_path(person.id)
              %li
                = link_to 'Delete', person_path(person.id), method: :delete, data: { confirm: 'Are you sure?' }
