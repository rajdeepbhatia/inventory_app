.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.margin-top-80
  .panel.panel-default
    .panel-heading
      .panel-title Register
    .panel-body
      = form_for resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'} do |f|
        .input-group
          %span.input-group-addon
            %i.glyphicon.glyphicon-user
          = f.email_field :email, placeholder: 'Email', class: 'form-control', autofocus: true, required: true
        .input-group
          %span.input-group-addon
            %i.glyphicon.glyphicon-lock
          = f.password_field :password, placeholder: 'Password', class: 'form-control', required: true
        .input-group
          %span.input-group-addon
            %i.glyphicon.glyphicon-lock
          = f.password_field :password_confirmation, placeholder: 'Confirm Password', class: 'form-control', required: true
        .form-group
          .col-sm-12.controls
            = f.submit 'Sign Up', class: 'btn btn-success btn-block'
        .form-group
          .col-md-12.control
            .small-link-ul
              Already registered?
              = link_to 'Log In!', login_path
