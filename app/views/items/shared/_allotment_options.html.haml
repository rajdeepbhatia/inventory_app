.row
  .col-md-6.col-md-offset-3
    = form_for @item, url: change_allotment_status_item_path(@item), method: :put, remote: true do |f|
      .form-group
        %label Allot To Person or Deallot
        = f.select :person_id, options_for_select(Person.all.map{ |p| ["#{p.name} <#{p.mobile_no}>", p.id] }.sort, @item.person_id.to_s),
          { include_blank: 'Deallot' },
          class: 'form-control'
        %p.help-block.error-red= @item.errors[:person_id].first
      = f.submit 'Change', class: 'btn btn-block btn-primary btn-sm blockui'
