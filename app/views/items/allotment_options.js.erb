App.unBlockUI($('.modal-dialog'));
<% unless @error.blank? %>
    $('#flashMessages').html("<%= j flash_message(t('items.error.not_found'), 'alert-danger') %>");
    $('#commonModal').modal('hide');
<% else %>
    $('#commonModalTitle').html('Update Item Allotment Details');
    $('#commonModalBody').html("<%= j render 'items/shared/allotment_options' %>");
<% end %>
